<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FlashcardsCourseProject.Views.CardSetDetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">

    <StackLayout Padding="15" Spacing="20">
        <Label FontSize="Medium" Text="Name:" />
        <Label FontSize="Small" Text="{Binding Name}" />
        <Label FontSize="Medium" Text="Picture:" />
        <Label FontSize="Small" Text="{Binding PicturePath}" />
    </StackLayout>

</ContentPage>